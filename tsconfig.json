{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src"]
}
